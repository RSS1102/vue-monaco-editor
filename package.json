{
  "name": "@liting-yes/vue-monaco-editor",
  "version": "0.1.0",
  "description": "monaco-editor with vue3",
  "author": "liting-yes <luz.liting@gmail.com> (https://liting.ink/)",
  "license": "MIT",
  "homepage": "https://github.com/liting-yes/vue-monaco-editor#readme",
  "bugs": {
    "url": "https://github.com/liting-yes/vue-monaco-editor/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "keywords": [
    "vue",
    "monaco",
    "editor",
    "monaco-editor"
  ],
  "exports": {
    ".": {
      "import": "./dist/vue-monaco-editor.mjs",
      "style.css": "./dist/style.css"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite  --host",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "commit": "git add . && git-cz",
    "release": "bumpp && npm publish",
    "prepare": "npx simple-git-hooks"
  },
  "peerDependencies": {
    "vue": "3.x"
  },
  "dependencies": {
    "monaco-editor": "^0.38.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.4",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@playwright/test": "^1.33.0",
    "@rushstack/eslint-patch": "^1.2.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^18.16.8",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "bumpp": "^9.1.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.39.0",
    "eslint-plugin-vue": "^9.14.1",
    "inquirer": "8",
    "lint-staged": "^13.2.2",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "simple-git-hooks": "^2.8.1",
    "typescript": "~5.0.4",
    "vite": "^4.3.5",
    "vue": "^3.3.4",
    "vue-tsc": "^1.6.4"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{vue,ts,json,cjs}": "eslint --fix --ignore-path .gitignore"
  }
}
